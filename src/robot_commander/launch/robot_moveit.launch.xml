<launch> 
    <let name="urdf_path"
        value="$(find-pkg-share robot_description)/urdf/humanoid.urdf.xacro" />
    <let name="rviz_config_path"
        value="$(find-pkg-share robot_commander)/launch/setting.rviz" />
    <let name="roscontrollers_config_path"
        value="$(find-pkg-share robot_description)/config/ros2_controllers.yaml" />       
        
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
            value="$(command 'xacro $(var urdf_path)')" />
        <param name="publish_frequency" value="1000.0" />
    </node>

    <node pkg="controller_manager" exec="ros2_control_node">
        <param name="robot_description"
           value="$(command 'xacro $(var urdf_path)')" />
        <param from="$(var roscontrollers_config_path)"/>
    </node>

    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster"/>
    <node pkg="controller_manager" exec="spawner" args="right_arm_controller"/>
    <node pkg="controller_manager" exec="spawner" args="left_arm_controller"/>
    <node pkg="controller_manager" exec="spawner" args="left_gripper_controller"/>
    <node pkg="controller_manager" exec="spawner" args="right_gripper_controller"/>
    <node pkg="controller_manager" exec="spawner" args="neck_controller"/>

    <include file="$(find-pkg-share robot_moveit_config)/launch/move_group.launch.py"/>

    <!-- <node pkg="z1_robot_commander_cpp" exec="commander" /> -->
    <node pkg="rviz2" exec="rviz2" output="screen" 
        args="-d $(var rviz_config_path)" />

</launch>
